{
    "root": true,
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
    },
    "extends": [
        "eslint:recommend",
        "plugin:import/recommended",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "jest",
        "prettier"
    ],
    "ignorePatterns": ["node_modules", "build"]
}
